<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tabhost" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="match_parent">
        <TabWidget android:id="@android:id/tabs"
            android:layout_width="match_parent" android:layout_height="wrap_content" />

        <FrameLayout android:id="@android:id/tabcontent"
            android:layout_width="match_parent" android:layout_height="match_parent">

            <!-- first tab -->
            <LinearLayout
                android:id="@+id/tab1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="470dp"
                    tools:context="com.example.yu_hsingchang.myapplication.MapsActivity"/>
            </LinearLayout>

            <!--  second tab -->
            <LinearLayout
                android:id="@+id/tab2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout android:orientation="horizontal"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                    <EditText android:id="@+id/EditText01"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_weight="1.0" android:lines="1"
                        android:layout_below="@id/tabhost"
                        />
                    <Button android:id="@+id/Button01" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:text="Go" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <EditText
                    android:id="@+id/searchET"
                    android:layout_width="219dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.39" />

                <Button
                    android:id="@+id/searchButton"
                    android:text="Search"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/transparent"
                    android:textSize="14sp" />
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</TabHost>